<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Team Leaderboard</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@600;700;800&family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary: #004E4E;
      --primary-light: #047857;
      --accent: #9FD356;
      --bg1: #004E4E;
      --bg2: #047857;
      --card: #ffffff;
      --text-dark: #064E3B;
      --text-muted: #6B7280;
      --shadow: 0 20px 50px rgba(0, 78, 78, 0.25);
      --shadow-sm: 0 4px 20px rgba(0, 78, 78, 0.12);
    }
    * { box-sizing: border-box; margin: 0; padding: 0; }
    html, body {
      width: 1080px;
      height: 1920px;
      font-family: 'Nunito', system-ui, -apple-system, sans-serif;
    }
    body {
      background: linear-gradient(165deg, var(--bg1) 0%, var(--bg2) 50%, #10B981 100%);
      color: var(--text-dark);
      padding: 48px;
    }
    .header {
      text-align: center;
      margin-bottom: 36px;
    }
    .header-label {
      font-family: 'Outfit', sans-serif;
      font-size: 32px;
      font-weight: 600;
      color: rgba(255,255,255,0.8);
      text-transform: uppercase;
      letter-spacing: 4px;
      margin-bottom: 8px;
    }
    .header-title {
      font-family: 'Outfit', sans-serif;
      font-size: 64px;
      font-weight: 800;
      color: #fff;
      text-shadow: 0 4px 20px rgba(0,0,0,0.2);
      margin-bottom: 16px;
    }
    .lap-info {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      background: rgba(255,255,255,0.15);
      backdrop-filter: blur(10px);
      padding: 12px 28px;
      border-radius: 24px;
      color: #fff;
      font-size: 28px;
      font-weight: 600;
    }

    /* Progress Bar */
    .progress-wrap {
      background: var(--card);
      border-radius: 20px;
      padding: 28px 32px;
      margin-bottom: 28px;
      box-shadow: var(--shadow-sm);
    }
    .progress-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 16px;
    }
    .progress-label {
      font-size: 28px;
      font-weight: 700;
      color: var(--text-dark);
    }
    .progress-value {
      font-size: 28px;
      font-weight: 700;
      color: var(--primary);
    }
    .progress-bar {
      height: 20px;
      background: #E0E7E9;
      border-radius: 12px;
      overflow: hidden;
    }
    .progress-fill {
      height: 100%;
      background: linear-gradient(90deg, #10B981, var(--accent));
      border-radius: 12px;
      width: {{lap_progress}}%;
    }

    /* Team Rankings */
    .rankings {
      background: var(--card);
      border-radius: 28px;
      padding: 32px;
      box-shadow: var(--shadow);
    }
    .rankings-title {
      font-family: 'Outfit', sans-serif;
      font-size: 36px;
      font-weight: 700;
      color: var(--text-dark);
      margin-bottom: 24px;
      text-align: center;
    }

    .team-row {
      display: flex;
      align-items: center;
      gap: 20px;
      padding: 20px 24px;
      border-radius: 20px;
      margin-bottom: 16px;
      transition: all 0.2s;
    }
    .team-row:last-child { margin-bottom: 0; }
    .team-row.rank-1 { background: linear-gradient(135deg, #FEF3C7, #FDE68A); }
    .team-row.rank-2 { background: linear-gradient(135deg, #F3F4F6, #E5E7EB); }
    .team-row.rank-3 { background: linear-gradient(135deg, #FED7AA, #FDBA74); }
    .team-row.rank-other { background: #F9FAFB; }

    .rank-badge {
      width: 56px;
      height: 56px;
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: 'Outfit', sans-serif;
      font-size: 28px;
      font-weight: 800;
      color: #fff;
      flex-shrink: 0;
    }
    .rank-1 .rank-badge { background: linear-gradient(135deg, #F59E0B, #D97706); }
    .rank-2 .rank-badge { background: linear-gradient(135deg, #9CA3AF, #6B7280); }
    .rank-3 .rank-badge { background: linear-gradient(135deg, #EA580C, #C2410C); }
    .rank-other .rank-badge { background: var(--primary); }

    .team-info {
      flex: 1;
      min-width: 0;
    }
    .team-name {
      font-size: 32px;
      font-weight: 700;
      color: var(--text-dark);
      margin-bottom: 4px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    .team-captain {
      font-size: 22px;
      color: var(--text-muted);
    }

    .member-avatars {
      display: flex;
      flex-shrink: 0;
    }
    .member-avatar {
      width: 48px;
      height: 48px;
      border-radius: 50%;
      border: 3px solid #fff;
      margin-left: -12px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .member-avatar:first-child { margin-left: 0; }
    .member-avatar img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .member-count {
      width: 48px;
      height: 48px;
      border-radius: 50%;
      background: var(--primary);
      color: #fff;
      font-size: 18px;
      font-weight: 700;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-left: -12px;
      border: 3px solid #fff;
    }

    .team-stats {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      flex-shrink: 0;
    }
    .vp-score {
      font-family: 'Outfit', sans-serif;
      font-size: 36px;
      font-weight: 800;
      color: var(--primary);
    }
    .weight-delta {
      font-size: 22px;
      font-weight: 600;
    }
    .weight-delta.loss { color: #059669; }
    .weight-delta.gain { color: #F59E0B; }
    .weight-delta.neutral { color: var(--text-muted); }

    .footer {
      text-align: center;
      margin-top: 32px;
      color: rgba(255,255,255,0.7);
      font-size: 24px;
    }
  </style>
</head>
<body>
  <div class="header">
    <div class="header-label">Marathon Wellness</div>
    <div class="header-title">TEAM LEADERBOARD</div>
    <div class="lap-info">
      <span>Lap {{lap}}</span>
      <span>â€¢</span>
      <span>Day {{day}}/10</span>
    </div>
  </div>

  <!-- Lap Progress Bar -->
  <div class="progress-wrap">
    <div class="progress-header">
      <span class="progress-label">Lap Progress</span>
      <span class="progress-value">{{lap_progress}}%</span>
    </div>
    <div class="progress-bar">
      <div class="progress-fill"></div>
    </div>
  </div>

  <!-- Team Rankings -->
  <div class="rankings">
    <div class="rankings-title">Team Rankings by VP</div>

    {{#each teams}}
    <div class="team-row {{#if (eq @index 0)}}rank-1{{else if (eq @index 1)}}rank-2{{else if (eq @index 2)}}rank-3{{else}}rank-other{{/if}}">
      <div class="rank-badge">{{add @index 1}}</div>

      <div class="team-info">
        <div class="team-name">{{name}}</div>
        <div class="team-captain">Captain: {{captain}}</div>
      </div>

      <div class="member-avatars">
        {{#each members}}
          {{#if (lt @index 4)}}
            <div class="member-avatar">
              <img src="{{avatar}}" alt="{{name}}" />
            </div>
          {{/if}}
        {{/each}}
        {{#if (gt members.length 4)}}
          <div class="member-count">+{{sub members.length 4}}</div>
        {{/if}}
      </div>

      <div class="team-stats">
        <div class="vp-score">{{vp}} VP</div>
        <div class="weight-delta {{getStatusClass total_delta}}">
          {{formatDelta total_delta}}g
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <div class="footer">
    Updated: {{updated_at}}
  </div>
</body>
</html>
