<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Lap Completion Certificate</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@600;700;800;900&family=Nunito:wght@400;600;700&family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary: #004E4E;
      --primary-light: #047857;
      --accent: #9FD356;
      --gold: #F59E0B;
      --gold-dark: #D97706;
      --card: #ffffff;
      --text-dark: #064E3B;
      --text-muted: #6B7280;
      --shadow: 0 20px 60px rgba(0, 78, 78, 0.2);
    }
    * { box-sizing: border-box; margin: 0; padding: 0; }
    html, body {
      width: 1080px;
      height: 1444px;
      font-family: 'Nunito', system-ui, -apple-system, sans-serif;
    }
    body {
      background: linear-gradient(180deg, #F0FDF4 0%, #ECFDF5 50%, #D1FAE5 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 48px;
    }

    /* Certificate Frame */
    .certificate {
      width: 984px;
      height: 1348px;
      background: var(--card);
      border-radius: 32px;
      box-shadow: var(--shadow);
      position: relative;
      overflow: hidden;
    }

    /* Decorative Border */
    .border-outer {
      position: absolute;
      inset: 16px;
      border: 4px solid var(--primary);
      border-radius: 24px;
      pointer-events: none;
    }
    .border-inner {
      position: absolute;
      inset: 28px;
      border: 2px solid rgba(0, 78, 78, 0.3);
      border-radius: 20px;
      pointer-events: none;
    }

    /* Corner Decorations */
    .corner {
      position: absolute;
      width: 80px;
      height: 80px;
      opacity: 0.15;
    }
    .corner-tl { top: 40px; left: 40px; background: linear-gradient(135deg, var(--primary) 50%, transparent 50%); }
    .corner-tr { top: 40px; right: 40px; background: linear-gradient(225deg, var(--primary) 50%, transparent 50%); }
    .corner-bl { bottom: 40px; left: 40px; background: linear-gradient(45deg, var(--primary) 50%, transparent 50%); }
    .corner-br { bottom: 40px; right: 40px; background: linear-gradient(315deg, var(--primary) 50%, transparent 50%); }

    /* Content */
    .content {
      position: relative;
      z-index: 1;
      padding: 72px 64px;
      display: flex;
      flex-direction: column;
      align-items: center;
      height: 100%;
    }

    /* Header */
    .logo-section {
      display: flex;
      align-items: center;
      gap: 16px;
      margin-bottom: 24px;
    }
    .logo-text {
      font-family: 'Outfit', sans-serif;
      font-size: 28px;
      font-weight: 800;
      color: var(--primary);
      letter-spacing: 2px;
    }

    .certificate-title {
      font-family: 'Playfair Display', serif;
      font-size: 64px;
      font-weight: 700;
      color: var(--primary);
      text-align: center;
      margin-bottom: 8px;
      letter-spacing: 4px;
    }
    .certificate-subtitle {
      font-size: 24px;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 8px;
      margin-bottom: 40px;
    }

    /* Decorative Line */
    .divider {
      width: 400px;
      height: 4px;
      background: linear-gradient(90deg, transparent, var(--accent), var(--primary), var(--accent), transparent);
      border-radius: 2px;
      margin-bottom: 40px;
    }

    /* Presented To */
    .presented {
      font-size: 22px;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 6px;
      margin-bottom: 16px;
    }
    .recipient-name {
      font-family: 'Playfair Display', serif;
      font-size: 72px;
      font-weight: 700;
      color: var(--text-dark);
      text-align: center;
      margin-bottom: 24px;
    }

    /* Lap Badge */
    .lap-badge {
      display: flex;
      align-items: center;
      gap: 16px;
      background: linear-gradient(135deg, var(--gold), var(--gold-dark));
      padding: 16px 48px;
      border-radius: 40px;
      box-shadow: 0 8px 24px rgba(245, 158, 11, 0.35);
      margin-bottom: 40px;
    }
    .lap-badge-icon {
      font-size: 36px;
    }
    .lap-badge-text {
      font-family: 'Outfit', sans-serif;
      font-size: 32px;
      font-weight: 800;
      color: #fff;
      text-transform: uppercase;
      letter-spacing: 2px;
    }

    /* Stats Section */
    .stats-section {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 24px;
      width: 100%;
      margin-bottom: 40px;
    }
    .stat-card {
      background: linear-gradient(145deg, #F9FAFB, #F3F4F6);
      border-radius: 20px;
      padding: 28px 24px;
      text-align: center;
      border: 1px solid rgba(0, 78, 78, 0.1);
    }
    .stat-icon {
      font-size: 40px;
      margin-bottom: 12px;
    }
    .stat-value {
      font-family: 'Outfit', sans-serif;
      font-size: 40px;
      font-weight: 800;
      color: var(--primary);
      margin-bottom: 4px;
    }
    .stat-value.positive { color: #059669; }
    .stat-value.negative { color: #F59E0B; }
    .stat-label {
      font-size: 20px;
      color: var(--text-muted);
      font-weight: 600;
    }

    /* Achievement Message */
    .achievement-text {
      font-size: 26px;
      color: var(--text-dark);
      text-align: center;
      max-width: 700px;
      line-height: 1.6;
      margin-bottom: auto;
    }

    /* Footer */
    .footer-section {
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      padding-top: 32px;
      border-top: 1px dashed rgba(0, 78, 78, 0.2);
    }
    .date-section {
      text-align: left;
    }
    .date-label {
      font-size: 16px;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 2px;
      margin-bottom: 4px;
    }
    .date-value {
      font-size: 22px;
      font-weight: 700;
      color: var(--text-dark);
    }
    .team-section {
      text-align: right;
    }
    .team-label {
      font-size: 16px;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 2px;
      margin-bottom: 4px;
    }
    .team-value {
      font-size: 22px;
      font-weight: 700;
      color: var(--text-dark);
    }

    /* Seal */
    .seal {
      position: absolute;
      bottom: 80px;
      left: 50%;
      transform: translateX(-50%);
      width: 120px;
      height: 120px;
      background: linear-gradient(145deg, var(--primary), var(--primary-light));
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 8px 24px rgba(0, 78, 78, 0.3);
    }
    .seal-inner {
      width: 100px;
      height: 100px;
      border: 3px solid rgba(255,255,255,0.3);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .seal-icon {
      font-size: 48px;
    }
  </style>
</head>
<body>
  <div class="certificate">
    <!-- Decorative Elements -->
    <div class="border-outer"></div>
    <div class="border-inner"></div>
    <div class="corner corner-tl"></div>
    <div class="corner corner-tr"></div>
    <div class="corner corner-bl"></div>
    <div class="corner corner-br"></div>

    <!-- Content -->
    <div class="content">
      <div class="logo-section">
        <span class="logo-text">MARATHON WELLNESS</span>
      </div>

      <h1 class="certificate-title">Certificate</h1>
      <div class="certificate-subtitle">of Completion</div>

      <div class="divider"></div>

      <div class="presented">This is to certify that</div>
      <div class="recipient-name">{{name}}</div>

      <!-- Lap Badge -->
      <div class="lap-badge">
        <span class="lap-badge-icon">üèÜ</span>
        <span class="lap-badge-text">Completed Lap {{lap}}</span>
      </div>

      <!-- Stats Grid -->
      <div class="stats-section">
        <div class="stat-card">
          <div class="stat-icon">‚öñÔ∏è</div>
          <div class="stat-value {{getStatusClass weight_change}}">{{formatDelta weight_change}}</div>
          <div class="stat-label">Weight Change</div>
        </div>
        <div class="stat-card">
          <div class="stat-icon">üî•</div>
          <div class="stat-value">{{streak}}</div>
          <div class="stat-label">Day Streak</div>
        </div>
        <div class="stat-card">
          <div class="stat-icon">‚≠ê</div>
          <div class="stat-value">{{vp}}</div>
          <div class="stat-label">Victory Points</div>
        </div>
      </div>

      <!-- Achievement Text -->
      <div class="achievement-text">
        {{default achievement_text "Congratulations on completing this lap! Your dedication to wellness is inspiring."}}
      </div>

      <!-- Footer -->
      <div class="footer-section">
        <div class="date-section">
          <div class="date-label">Date Completed</div>
          <div class="date-value">{{completed_date}}</div>
        </div>
        <div class="team-section">
          <div class="team-label">Team</div>
          <div class="team-value">{{team}}</div>
        </div>
      </div>
    </div>

    <!-- Seal -->
    <div class="seal">
      <div class="seal-inner">
        <span class="seal-icon">‚úì</span>
      </div>
    </div>
  </div>
</body>
</html>
